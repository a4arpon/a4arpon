{
  "format_on_save": "on",
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "typos": {
      "initialization_options": {
        "config": "typos.toml",
        "path": "typos-lsp",
        "diagnosticSeverity": "Error",
        "logLevel": "info",
        "trace.server": "off"
      }
    }
  },
  "formatter": {
    "language_server": {
      "name": "biome"
    }
  },
  "code_actions_on_format": {
    "source.fixAll.biome": true,
    "source.organizeImports": true,
    "source.removeUnusedImports.ts": true,
    "source.fixAll.ts": true
  }
}
